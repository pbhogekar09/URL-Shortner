<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                min-height: 100vh;
                background: linear-gradient(135deg, #43cea2 0%, #185a9d 100%);
             }
        .card {
            margin-top: 40px;
        }
        .table thead {
            background: #f1f5f9;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home page</title>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <div class="card shadow">
                    <div class="card-body">
                        <h1 class="card-title text-center mb-4">URL Shortener</h1>
                        <% if (locals.id) { %>
                            <div class="alert alert-success text-center">
                                URL generated: 
                                <a href="http://localhost:8001/url/<%= id %>" target="_blank" class="fw-bold">
                                    http://localhost:8001/url/<%= id %>
                                </a>
                            </div>
                        <% } %>
                        <form method="post" action="/url" class="mb-4">
                            <div class="mb-3">
                                <label for="url" class="form-label">Enter your desired URL</label>
                                <input
                                    type="text"
                                    name="url"
                                    id="url"
                                    class="form-control"
                                    placeholder="https://example.com"
                                    required
                                />
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Generate</button>
                        </form>
                        <% if (locals.urls) { %>
                            <div class="table-responsive">
                                <table class="table table-bordered align-middle">
                                    <thead>
                                        <tr>
                                            <th>S.No.</th>
                                            <th>Short ID</th>
                                            <th>Redirect URL</th>
                                            <th>Clicks</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% urls.forEach((url,index) => { %>
                                        <tr>
                                            <td><%= index + 1 %></td>
                                            <td>
                                                <a href="http://localhost:8001/url/<%= url.shortId %>" target="_blank">
                                                    <%= url.shortId %>
                                                </a>
                                            </td>
                                            <td style="word-break:break-all;"><%= url.redirectURL %></td>
                                            <td><%= url.visitHistory.length %></td>
                                        </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>